sidebar-active-bg() {
  color: var(--vp-c-brand);
  background-color: rgba(100, 100, 100, 0.1);
  transition: background-color 0.1s;
  border-radius: var(--vp-common-border-radius);
  margin-left: -10px;
  padding-left: 10px;
}

navbar-active-bg() {
  color: var(--vp-c-brand);
  background-color: var(--vp-c-bg-soft);
  transition: background-color 0.1s;
  border-radius: var(--vp-common-border-radius);
  margin: -10px;
  padding: 10px;
}